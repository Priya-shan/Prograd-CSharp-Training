    <form method="post" style="text-align:center">
        <div class=" row mb-3">
            <div class="col-xl-1"></div>
            <label class=" col-xl-4 col-form-label" style="font-size:22px">Job Id</label>
            <div class="col-xl-4">
                <input type="text" class="form-control" name="job_id" value="" />
            </div>
        </div>
        <div class=" row mb-3">
            <div class="col-xl-1"></div>
            <label class=" col-xl-4 col-form-label" style="font-size:22px">Job Title</label>
            <div class="col-xl-4">
                <input type="text" class="form-control" name="job_name" value="" />
            </div>
        </div>
        <div class=" row mb-3">
            <div class="col-xl-1"></div>
            <label class=" col-xl-4 col-form-label" style="font-size:22px">Job Category</label>
            <div class="col-xl-4">
                <input type="text" class="form-control" name="job_category" value="" />
            </div>
        </div>
        <div class=" row mb-3">
            <div class="col-xl-1"></div>
            <label class=" col-xl-4 col-form-label" style="font-size:22px">Job Description</label>
            <div class="col-xl-4">
                <input type="text" class="form-control" name="job_desc" value="" />
            </div>
        </div>
        <div class=" row mb-3">
            <div class="col-xl-1"></div>
            <label class=" col-xl-4 col-form-label" style="font-size:22px">Salary</label>
            <div class="col-xl-4">
                <input type="number" class="form-control" name="salary" value="" />
            </div>
        </div>

        <div class=" row mb-3">
            <div class="col-xl-1"></div>
            <label class=" col-xl-4 col-form-label" style="font-size:22px">Company</label>
            <div class="col-xl-4">
                <input type="text" class="form-control" name="company_name" value="" />
            </div>
        </div>

        <input type="submit" class="btn-primary" />
        <a href="/" class="btn-danger" style="padding:5px 10px;text-decoration:none">Cancel</a>
