@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User))
{
        @if (User.IsInRole("administrator"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" id="nav-addplan" asp-area="" asp-controller="Plans" asp-action="Index">Add Plans</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" id="nav-addplan" asp-area="" asp-controller="Plans" asp-action="Transactions">Transactions</a>
            </li>
            
        }
        else
        {
            <li class="nav-item ">
                <a class="nav-link text-dark " id="nav-home" asp-area="" asp-controller="Recharge" asp-action="Startup">Home</a>
            </li>
        }
        <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
